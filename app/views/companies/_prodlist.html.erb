<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th>Barcode</th>
      <th>Qrcode</th>
      <th>Size</th>
      <th>Segment</th>
      <th>Family</th>
      <th>Class</th>
      <th>Brick</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% products.each do |product| %>
      <tr>
        <td><%= product.company.name %></td>
        <td><%= product.name %></td>
        <td><%= image_tag product.image.thumb.url if product.image? %></td>
        <td><%= product.description %></td>
        <td><%= product.barcode %></td>
        <td><%= product.qrcode %></td>
        <td><%= product.size %></td>
        <td><%= product.segment.title %></td>
        <td><%= product.family.title %></td>
        <td><%= product.klass.title %></td>
        <td><%= product.brick.title %></td>
        <td><%= link_to 'View', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= button_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
