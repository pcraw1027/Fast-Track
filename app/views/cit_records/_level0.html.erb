<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>MID</th>
      <th>Count</th>
      <th>Company ID</th>
      <th>Company Name</th>
      <th>User</th>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% cit_records_0s.each do |cit| %>
      <tr>
        <td><%= cit.mid %></td>
        <td><%= cit.product_activity_count %></td>
        <td><%= cit.company_id %></td>
        <td><%= cit.company&.name %></td>
        <td><%= cit.cit_level_users.where(level: 0 )&.first&.user&.username %></td>
        <td><%= cit.created_at.strftime("%m/%d/%Y") %></td>
      
        <td><%= link_to 'Add', company_capture_interface_path(mid: cit.mid, level: 1), class:"action-btn-outlined" %></td>
     </tr>
    <% end %>
  </tbody>
</table>
