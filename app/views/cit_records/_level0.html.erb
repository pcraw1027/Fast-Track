<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>MID</th>
      <th>Count</th>
      <th>Source</th>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% cit_records_0s.each do |cit| %>
      <tr>
        <td><%= cit.mid %></td>
        <td><%= cit.product_activity_count %></td>
        <td><%= cit.source %></td>
        <td><%= cit.created_at.strftime("%d/%m/%Y") %></td>
      
        <td><%= link_to 'Add', cit_record_company_capture_interface_path(cit_record_id: cit.id) %></td>
     </tr>
    <% end %>
  </tbody>
</table>
