<div class="nested-fields p-3 mb-3">
  

<div class="row">
     <div class = "col-md-6">
      <div class = "form-group">
          <%= f.label :parent_company_id, "Parent Company", class:"form-label" %>
            <%= f.select :parent_company_id, [[f.object.parent_company&.name, f.object.parent_company&.id]], 
              { prompt: "Search for a company" }, 
              data: { controller: "company-select" } 
            %>
    </div>
    </div>

 
    <div class = "col-md-2">
        <div class = "form-group">
            <%= f.label :id, "ID", class:"form-label" %>
            <%= f.text_field :id, value: f.object.parent_company_id, disabled: true, class:"form-control" %>
        </div>
    </div>

    <div class = "col-md-4">
        <div class = "form-group">
            <%= f.label :mids, "MIDs", class:"form-label" %>
            <%= f.text_field :mids, value: f.object.parent_company&.mids, disabled: true, class:"form-control" %>
        </div>
    </div>
   </div>
    <div class = "row">
    <div class = "col-md-4">
        <div class = "form-group">
            <%= f.label :company_relationship_type_id, "Relationship", class:"form-label" %>
            <%= f.select :company_relationship_type_id, @company_relationship_types.collect { |c| [c.relationship, c.id] }, {}, class: "form-control" %>
        </div>
    </div>

    <div class = "col-md-4">
        <div class = "form-group">
            <%= f.label :logo, class:"form-label" %>
          <%= image_tag f.object.parent_company&.logo_url,  width: 60, height: 50  if f.object.parent_company&.logo? %>
          <%= f.file_field :logo, class: "form-control-file"  %>
        
        </div>
    </div>

        <div class = "col-md-4">
        <div class = "form-group mx-2">
           <i class="fas fa-trash" style="color: #ff0000;"></i> <%= link_to_remove_association "remove", f, class: "btn btn-outline-danger btn-sm" %>
        </div>
    </div>
     </div>


  
</div>
