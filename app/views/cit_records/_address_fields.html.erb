<div class="nested-fields p-3 mb-3">
  
<div class="row">
     <div class = "col-md-4">
      <div class = "form-group">
      <%= f.label :address_type_id, class:"form-label" %>
      <%= f.select :address_type_id, @address_types.collect { |c| [c.name, c.id] }, {}, class: "form-control" %>
    </div>
</div>

 
    <div class = "col-md-4">
        <div class = "form-group">
            <%= f.label :address1, class:"form-label" %>
            <%= f.text_field :address1, class:"form-control" %>
        </div>
    </div>
    <div class = "col-md-4">
        <div class = "form-group">
            <%= f.label :address2, class:"form-label" %>
                <%= f.text_field :address2, class:"form-control" %>
        </div>
    </div>

  </div>



<div class="row">
 
    <div class = "col-md-3">
        <div class = "form-group">
            <%= f.label :city, class:"form-label" %>
            <%= f.text_field :city, class:"form-control" %>
        </div>
    </div>
    <div class = "col-md-3">
        <div class = "form-group">
            <%= f.label :state, class:"form-label" %>
                <%= f.text_field :state, class:"form-control" %>
        </div>
    </div>
 
    <div class = "col-md-3">
        <div class = "form-group">
            <%= f.label :postal_code, class:"form-label" %>
            <%= f.text_field :postal_code, class:"form-control" %>
        </div>
    </div>
    
    <div class = "col-md-3">
        <div class="form-group">
      <%= f.label :country_reference_id, "Country", class:"form-label" %>
      <%= f.select :country_reference_id, @country_references.collect { |c| [c.country, c.id] }, {}, class: "form-control", data: { person_target: "countryReference" } %>
    </div>
    </div>

  </div>


  <i class="fas fa-trash" style="color: #ff0000;"></i> <%= link_to_remove_association "remove address", f, class: "btn btn-outline-danger btn-sm" %>
<br/><br/>
</div>
