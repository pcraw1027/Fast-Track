<p id="notice"><%= notice %></p>

<h1>Person Social Sites</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Profile link</th>
      <th>Social site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_social_sites.each do |person_social_site| %>
      <tr>
        <td><a href="/people/<%= person_social_site.person_id %>"><%= person_social_site.person&.first_name + " " + person_social_site.person&.last_name %></a></td>
        <td><%= person_social_site.profile_link %></td>
        <td><%= person_social_site.social_site&.site %></td>
        <td><%= link_to 'Show', person_social_site %></td>
        <td><%= link_to 'Edit', edit_person_social_site_path(person_social_site) %></td>
        <td><%= link_to 'Destroy', person_social_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person Social Site', new_person_social_site_path %>
