

<h1>Company Ethnicity Stats</h1>

<table class="table table-striped table-bordered table-hover table-sm container-fluid" >
  <thead class="thead-dark" >
    <tr>
      <th>Company</th>
      <th>Ethnicity type</th>
      <th>Employee type</th>
      <th>Count</th>
      <th>Percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_ethnicity_stats.each do |company_ethnicity_stat| %>
      <tr>
        <td><%= company_ethnicity_stat.company.name %></td>
        <td><%= company_ethnicity_stat.ethnicity_type.ethnicity %></td>
        <td><%= company_ethnicity_stat.employee_type.employee %></td>
        <td><%= company_ethnicity_stat.count %></td>
        <td><%= company_ethnicity_stat.percentage %></td>
        <td><%= link_to 'View', company_ethnicity_stat %></td>
        <td><%= link_to 'Edit', edit_company_ethnicity_stat_path(company_ethnicity_stat) %></td>
        <td><%= button_to 'Delete', company_ethnicity_stat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company Ethnicity Stat', new_company_ethnicity_stat_path, class: "btn btn-secondary" %>
