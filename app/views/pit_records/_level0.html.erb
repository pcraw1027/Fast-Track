<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>Barcode</th>
      <th>Count</th>
      <th>Source</th>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% pit_records_0s.each do |pit| %>
      <tr>
        <td><%= pit.barcode %></td>
        <td><%= pit.product_activity_count %></td>
        <td><%= pit.source %></td>
        <td><%= pit.created_at.strftime("%d/%m/%Y") %></td>
      
        <td><%= link_to 'Add', pit_record_product_capture_interface_path(pit_record_id: pit.id) %></td>
     </tr>
    <% end %>
  </tbody>
</table>
