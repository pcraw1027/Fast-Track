<div class="container mt-5">
   
   <div id="accordion">
    
            <!-- Accordion Item 1 -->
            <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                <button
                    class="btn theme-link btn-block text-left m-0 p-3 font-weight-bold collapsed"
                    data-toggle="collapse"
                    data-target="#collapseOne"
                    aria-expanded="<%= params[:level] == '1' ? 'true' : 'false' %>"
                    aria-controls="collapseOne"
                >
                    Level 1 (Base Data) <%= 'True' if product.level_1_flag %> <%= 'False' if !product.level_1_flag %>
                </button>
                </h5>
            </div>

            <div
                id="collapseOne"
                class="<%= params[:level] == '1' ? '' : 'collapse' %>"
                aria-labelledby="headingOne"
                data-parent="#accordion"
            >
                <div class="card-body">
                     <%= render partial: "pit_records/form_level1", locals: {product: product, pit_record: pit_record} %>
                </div>
            </div>
            </div>

