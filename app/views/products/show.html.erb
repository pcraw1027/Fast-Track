  <div class="row">
    <div class="col">

        
        <%if @product.family %>
        <p>
          <strong>Company:</strong>
          <%= @product.company.name %>
        </p>
<%end%>
        <p>
          <strong>Product category source:</strong>
          <%= @product.product_category_source.description %>
        </p>

        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>

    

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Qrcode:</strong>
          <%= @product.qrcode %>
