<script>
  function handleSearch() {
    var query = document.getElementById('search-input').value.trim();
    var path = window.location.pathname;

    var target = '/products';
    if (path.startsWith('/companies')) {
      target = '/companies';
    }

    if (query) {
      window.location.href = `${target}?page=1&q=${encodeURIComponent(query)}`;
    }
  }

  
  var urlParams = new URLSearchParams(window.location.search);
  var filterVal = urlParams.get("filter_by");
  if (filterVal) {
    var citSelectInp = document.getElementById("filter_by-select-inp")
    if(citSelectInp){
        citSelectInp.value = filterVal;
    }
  }


  
</script>


  <script>
      document.addEventListener('DOMContentLoaded', function () {
        let addBtn = document.getElementById('add-media-field');
        let mediaFields = document.getElementById('media-fields');
        let mediaUpload = mediaFields && mediaFields.querySelector('.media-upload');

        if (addBtn && mediaFields && mediaUpload) {
          addBtn.addEventListener('click', function (e) {
            e.preventDefault();

            let newField = mediaUpload.cloneNode(true);
            let fileInput = newField.querySelector('input[type="file"]');

            if (fileInput) fileInput.value = ''; 
            mediaFields.appendChild(newField);
          });
        }





        function updateAddressIndexes() {
          document.querySelectorAll("#addresses .nested-fields").forEach((el, i) => {
            let indexSpan = el.querySelector(".address-index");
            if (indexSpan) indexSpan.textContent = `#${i + 1}`;
          });
        }

      document.addEventListener("turbo:load", updateAddressIndexes);
      document.addEventListener("cocoon:after-insert", updateAddressIndexes);
      document.addEventListener("cocoon:after-remove", updateAddressIndexes);


      });
    </script>



  </body>
</html>






