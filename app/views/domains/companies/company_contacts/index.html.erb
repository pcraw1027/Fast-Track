<h3>Company Contacts</h3>
<table class="table table-striped table-bordered table-hover table-sm container-fluid" >
  <thead class="thead-dark" >
    <tr>
      <th>Company</th>
      <th>Photo</th>
      <th>Company contact type</th>
      <th>Name</th>
      <th>Job title</th>
      <th>Email</th>
      <th>Phone</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_contacts.each do |company_contact| %>
      <tr>
        <td><%= company_contact.company.name %></td>
        <td><%= image_tag company_contact.photo.thumb.url if company_contact.photo? %></td>
        <td><%= company_contact.company_contact_type.role %></td>
        <td><%= company_contact.name %></td>
        <td><%= company_contact.job_title %></td>
        <td><%= company_contact.email %></td>
        <td><%= company_contact.phone %></td>
        <td><%= link_to 'View', company_contact %></td>
        <td><%= link_to 'Edit', edit_domains_companies_company_contact_path(company_contact) %></td>
        <td><%= button_to 'Delete', company_contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate @company_contacts, renderer: BootstrapPagination::Rails,
      class: 'pagination justify-content-center' %>

        <form method="get" action="/domains/companies/company_contacts">

          <div class="form-group">
             <input name="page" class="ml-2 jumpto-field" type="number" placeholder="Page #"/>
             <input class="btn btn-outline-success" type="submit" value="Goto page" />
          </div>

        </form>
</nav>

<%= link_to 'New Company Contact', new_domains_companies_company_contact_path, class: "action-btn" %>
