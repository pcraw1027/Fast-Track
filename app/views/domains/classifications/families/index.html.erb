<h3>Families</h3>
<table class="table table-striped table-bordered table-hover table-sm container-fluid" >
  <thead class="thead-dark" >
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Segment Code</th>
      <th>Segment Title
      <th>Product Category Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.code %></td>
        <td><%= family.title %></td>
        <td><%= family.segment.code %></td>
        <td><%= family.segment.title %></td>
        <td><%= family.product_category_source.code %></td>
        <td><%= link_to 'View', family %></td>
        <td><%= link_to 'Edit', edit_domains_classifications_family_path(family) %></td>
        <td><%= button_to 'Delete', family, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>


<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate @families, renderer: BootstrapPagination::Rails,
      class: 'pagination justify-content-center' %>

        <form method="get" action="/domains/classifications/families">

          <div class="form-group">
             <input name="page" class="ml-2 jumpto-field" type="number" placeholder="Page #"/>
             <input class="btn btn-outline-success" type="submit" value="Goto page" />
          </div>

        </form>
</nav>

<%= link_to 'New Family', new_domains_classifications_family_path, class: "action-btn" %>
