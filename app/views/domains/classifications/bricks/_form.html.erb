<%= form_with(model: brick) do |form| %>
  <% if brick.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brick.errors.count, "error") %> prohibited this brick from being saved:</h2>

      <ul>
        <% brick.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :k_id, value: params[:klass_id] %>
  <%= form.hidden_field :p_cat_id, value: params[:p_cat_id] %>

  <%= form.hidden_field :page, value: params[:page] %>
  <%= form.hidden_field :search_query, value: params[:search_query] %>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.number_field :code %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :klass_id %>
      <%= form.collection_select :klass_id, @klasses, :id, :code, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :product_category_source_id %>
      <%= form.collection_select :product_category_source_id, @product_category_sources, :id, :code, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: 'action-btn' %>
  </div>
<% end %>
