<h3>Segments</h3>

<table class="table table-striped table-bordered table-hover table-sm container-fluid">
  <thead class="thead-dark">
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Description</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segments.each do |segment| %>
      <tr>
        <td><%= segment.code %></td>
        <td><%= segment.title %></td>
        <td><%= segment.description %></td>
        <td><%= segment.product_category_source.code %></td>
        <td><%= link_to 'View', segment %></td>
        <td><%= link_to 'Edit', edit_domains_classifications_segment_path(segment) %></td>
        <td><%= button_to 'Delete', segment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate @segments, renderer: BootstrapPagination::Rails,
      class: 'pagination justify-content-center' %>

        <form method="get" action="/domains/classifications/segments">

          <div class="form-group">
             <input name="page" class="ml-2 jumpto-field" type="number" placeholder="Page #"/>
             <input class="btn btn-outline-success" type="submit" value="Goto page" />
          </div>

        </form>


</nav>
<%= link_to 'New Segment', new_domains_classifications_segment_path, class: "action-btn" %>
