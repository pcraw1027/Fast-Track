

<h1>Country References</h1>

<table class="table table-striped table-bordered table-hover table-sm container-fluid">
  <thead class="thead-dark">
    <tr>
      <th>Country code</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @country_references.each do |country_reference| %>
      <tr>
        <td><%= country_reference.country_code %></td>
        <td><%= country_reference.country %></td>
        <td><%= link_to 'Show', country_reference %></td>
        <td><%= link_to 'Edit', edit_domains_contact_and_identity_country_reference_path(country_reference) %></td>
        <td><%= link_to 'Destroy', country_reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

