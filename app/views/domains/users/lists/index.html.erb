

<h1>Lists</h1>

<table class="table table-striped table-bordered table-hover table-sm container-fluid">
  <thead class="thead-dark">
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>ListType</th>
      <th>Default</th>
      <th>Boolean</th>
      <th>Description</th>
      <th>Snapshot aggregate</th>
      <th>Boolean</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.user.username if list.user%></td>
        <td><%= list.name %></td>
        <td><%= list.list_type %></td>
        <td><%= list.default %></td>
        <td><%= list.description %></td>
        <td><%= list.snapshot_aggregate %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_domains_users_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate @users, renderer: BootstrapPagination::Rails,
      class: 'pagination justify-content-center' %>

        <form method="get" action="/domains/users/users">

          <div class="form-group">
             <input name="page" class="ml-2 jumpto-field" type="number" placeholder="Page #"/>
             <input class="btn btn-outline-success" type="submit" value="Goto page" />
          </div>

        </form>
</nav>