<h3>Capture Histories</h3>

<table class="table table-striped table-bordered table-hover table-sm container-fluid">
  <thead class="thead-dark">
    <tr>
      <th>Third party source</th>
      <th>Status</th>
      <th>Barcode</th>
      <th>Product Name</th>
      <th>Run Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @capture_histories.each do |capture_history| %>
      <tr>
        <td><%= capture_history.third_party_source %></td>
        <td><%= capture_history.status %></td>
        <td><%= capture_history.barcode %></td>
        <td><%= capture_history.name %></td>
        <td><%= capture_history.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Show', capture_history %></td>
        <td><%= link_to 'Edit', edit_domains_croupier_core_capture_history_path(capture_history) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate @capture_histories, renderer: BootstrapPagination::Rails,
      class: 'pagination justify-content-center' %>

        <form method="get" action="/domains/croupier_core/bit_records">

          <div class="form-group">
             <input name="page" class="ml-2 jumpto-field" type="number" placeholder="Page #"/>
             <input class="btn btn-outline-success" type="submit" value="Goto page" />
          </div>

        </form>
</nav>