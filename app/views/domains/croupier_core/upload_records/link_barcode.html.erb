
<h3>Upload associated with <%= params[:barcode] %></h3>
<table class="table table-striped table-bordered table-hover table-sm container-fluid">
  <thead class="thead-dark">
    <tr>
      <th>Scan</th>
      <th>User</th>
      <th>Resolve status</th>
      <th>Date</th>
      <th>Barcode</th>
      <th>Product name</th>
      <th>Company name</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_records.each do |upload_record| %>
      <tr>
        <td><%= upload_record.scan.barcode if upload_record.scan %></td>
        <td><%= upload_record.user.username if upload_record.user %></td>
        <td><%= upload_record.resolve_status %></td>
        <td><%= upload_record.date %></td>
        <td><%= upload_record.barcode %></td>
        <td><%= upload_record.product_name %></td>
        <td><%= upload_record.company_name %></td>
        <td><%= upload_record.remarks %></td>
        <td><%= link_to 'Show', upload_record %></td>
        <td><%= link_to 'Edit', edit_domains_croupier_core_upload_record_path(upload_record) %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate @upload_records, renderer: BootstrapPagination::Rails,
      class: 'pagination justify-content-center' %>

        <form method="get" action="/domains/croupier_core/upload_records">

          <div class="form-group">
             <input name="page" class="ml-2 jumpto-field" type="number" placeholder="Page #"/>
             <input class="btn btn-outline-success" type="submit" value="Goto page" />
          </div>

        </form>
</nav>
