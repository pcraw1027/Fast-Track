<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>MID</th>
      <th>Count</th>
      <th>Company ID</th>
      <th>Company Name</th>
      <th>User</th>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% cit_records_supervisories.each do |cit| %>
      <tr>
        <td><%= cit.mid %></td>
        <td><%= cit.product_activity_count %></td>
        <td><%= cit.company_id %></td>
        <td><%= cit.company&.name %></td>
        <td><%= cit.cit_level_users.where(level: 0 )&.first&.user&.username %></td>
        <td><%= cit.created_at.strftime("%m/%d/%Y") %></td>
      
        <td><%= link_to 'Add', company_capture_interface_path(mid: cit.mid, level: "s", filter_by: params[:filter_by]), class:"action-btn-outlined" %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br/><br/>

<nav aria-label="Page navigation" class="pagination-form">
    <%= will_paginate cit_records_supervisories,
      remote: true,
      renderer: BootstrapPagination::Rails,
      params: { controller: "domains/croupier_core/cit_records", action: "cit_records_supervisories" }, 
      class: 'pagination justify-content-center custom-paginate' %>

        <%= form_with url: cit_records_supervisories_path,
              method: :get,
              remote: true,
              html: { class: "jump-to-form" } do |form| %>

        <div class="form-group">
          <%= number_field_tag :page, nil,
                class: "ml-2 jumpto-field",
                placeholder: "Page #" %>
<%= form.hidden_field :filter_by, value: params[:filter_by] %>
          <%= form.submit "Goto page",
                class: "btn btn-outline-success" %>
        </div>

      <% end %>
</nav>