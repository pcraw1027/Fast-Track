<div class="container mt-0">
   
   <div id="accordion">
    
            <!-- Accordion Item 1 -->
            <div class="card">
            <div class="card-header" id="headingOne">
       
                    
            <div class="row">
            <div class="col-md-4">
            <h5 class="mb-0">
            <button
               class="btn theme-link btn-block text-left m-0 p-0 font-weight-bold collapsed"
                data-toggle="collapse"
                data-target="#collapseOne"
                aria-expanded="<%= (['1', 'r', 's', 'q', 'n', 'u'].include?(params[:level]) && !company.level_1_flag) ? 'true' : 'false' %>"
                aria-controls="collapseOne"
                >
                Level 1 (Base Data) <%= 'True' if company.level_1_flag && !["N", "R", "S", "Q", "U"].include?(cit_record.capture_status) %> <%= 'False' if !company.level_1_flag || ["N", "R", "S", "Q", "U"].include?(cit_record.capture_status) %>
                </button>
                </h5>
                
                </div>
                
                <div class="col-md-2">
                </div>
                
                <div class="col-md-6">
                <%= form_for(company, url: update_cit_status_path, html: { method: :put, multipart: true }) do |form| %>

                                <%= form.hidden_field :mid, value: cit_record.mid, id: "company-mid" %>
                                <%= form.hidden_field :level, value: params[:level] %>
                                <%= form.hidden_field :filter_by, value: params[:filter_by] %>

                                <%= form.hidden_field :cit_record_id, value: cit_record.id %>
                                <div class="d-flex"">
                                    <%= form.label :capture_status, "Status: " %>
                                    <%= form.select :capture_status,
                                        options_for_select(
                                        [
                                            ["Status Blank", "Blank"],
                                            ["Status R", "R"],
                                            ["Status S", "S"],
                                            ["Status U", "U"],
                                            ["Status Q", "Q"],
                                            ["Status N", "N"]
                                        ],
                                        cit_record.capture_status
                                        ),
                                        {},
                                        class: "form-control", style:"margin-left: 15px;"
                                    %>

                                    <%= form.submit "Update", class: 'status-active' %>

                                </div>  
                                <%end%>                           
                        </div> 

                              
                    </div>
                </div>
            </div>

            <div
                id="collapseOne"
                class="<%= (['1', 'r', 's', 'q', 'n', 'u'].include?(params[:level]) && !company.level_1_flag ) ? '' : 'collapse' %>"
                aria-labelledby="headingOne"
                data-parent="#accordion"
            >
                <div class="card-body">
                     <%= render partial: "domains/croupier_core/cit_records/form_level1", locals: { company: company, cit_record: cit_record, 
                        industry_category_types: industry_category_types, 
                        industry_category_type: industry_category_type
                    } %>
                </div>
            </div>
            </div>

            <!-- Accordion Item 2 -->
            <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                <button
                    class="btn theme-link btn-block collapsed text-left m-0 p-0 font-weight-bold"
                    data-toggle="collapse"
                    data-target="#collapseTwo"
                    aria-expanded="<%= params[:level] == '2' ? 'true' : 'false' %>"
                    aria-controls="collapseTwo"
                >
                    Level 2 (company Addresses) <%= 'True' if company.level_2_flag && !["N", "R", "S", "Q", "U"].include?(cit_record.capture_status) %> <%= 'False' if !company.level_2_flag || ["N", "R", "S", "Q", "U"].include?(cit_record.capture_status)  %>
                </button>
                </h5>
            </div>

            <div
                id="collapseTwo"
                class="<%= (params[:level] == '2' && !company.level_2_flag ) ? '' : 'collapse' %>"
                aria-labelledby="headingTwo"
                data-parent="#accordion"
            >
                <div class="card-body">
                    <%if company.level_1_flag && !["N", "R", "S", "Q", "U"].include?(cit_record.capture_status)%>
                        <%= render partial: "domains/croupier_core/cit_records/form_level2", locals: {company: company, cit_record: cit_record} %>
                    <%else%>
                        <h5>Level 1 data is required!</h5>
                    <%end%>
                </div>
            </div>
            </div>

            <!-- Accordion Item 3 -->
            <div class="card">
            <div class="card-header" id="headingThree">
                <h5 class="mb-0">
                <button
                    class="btn theme-link btn-block collapsed text-left m-0 p-0 font-weight-bold"
                    data-toggle="collapse"
                    data-target="#collapseThree"
                    aria-expanded="<%= params[:level] == '3' ? 'true' : 'false' %>"
                    aria-controls="collapseThree"
                >
                    Level 3 (Parents, Subsidiaries, & Brands) <%= 'True' if company.level_3_flag %> <%= 'False' if !company.level_3_flag %>
                </button>
                </h5>
            </div>

            <div
                id="collapseThree"
                class="<%= params[:level] == '3' ? '' : 'collapse' %>"
                aria-labelledby="headingThree"
                data-parent="#accordion"
            >
                <div class="card-body">
                    <%if company.level_1_flag && !["N", "R", "S", "Q", "U"].include?(cit_record.capture_status)%>
                        <%= render partial: "domains/croupier_core/cit_records/form_level3", locals: {company: company,
                                company_relationship_types: @company_relationship_types,
                                cit_record: cit_record } %>
                        
                    <%else%>
                        <h5>Level 1 data is required!</h5>
                    <%end%>
                </div>
            </div>
            </div>


            <!-- Accordion Item 4 -->
            <div class="card">
            <div class="card-header" id="headingFour">
                <h5 class="mb-0">
                <button
                    class="btn theme-link btn-block collapsed text-left m-0 p-0 font-weight-bold"
                    data-toggle="collapse"
                    data-target="#collapseFour"
                    aria-expanded="<%= params[:level] == '4' ? 'true' : 'false' %>"
                    aria-controls="collapseFour"
                >
                    Level 4 (Company Contacts) <%= 'True' if company.level_4_flag %> <%= 'False' if !company.level_4_flag %>
                </button>
                </h5>
            </div>

            <div
                id="collapseFour"
                class="<%= params[:level] == '4' ? '' : 'collapse' %>"
                aria-labelledby="headingFour"
                data-parent="#accordion"
            >
                <div class="card-body">
                    <%if company.level_1_flag && !["N", "R", "S", "Q", "U"].include?(cit_record.capture_status)%>
                        <%= render partial: "domains/croupier_core/cit_records/form_level4", locals: {company: company, cit_record: cit_record} %>
                        
                    <%else%>
                        <h5>Level 1 data is required!</h5>
                    <%end%>
                </div>
            </div>
            </div>

            <!-- Accordion Item 5 -->
            <div class="card">
            <div class="card-header" id="headingFive">
                <h5 class="mb-0">
                <button
                    class="btn theme-link btn-block collapsed text-left m-0 p-0 font-weight-bold"
                    data-toggle="collapse"
                    data-target="#collapseFive"
                    aria-expanded="<%= params[:level] == '5' ? 'true' : 'false' %>"
                    aria-controls="collapseFive"
                >
                    Level 5 (Diversity Snapshot) <%= 'True' if company.level_5_flag %> <%= 'False' if !company.level_5_flag %>
                </button>
                </h5>
            </div>

            <div
                id="collapseFive"
                class="<%= params[:level] == '5' ? '' : 'collapse' %>"
                aria-labelledby="headingFive"
                data-parent="#accordion"
            >
                <div class="card-body">
                    <%if company.level_1_flag && !["N", "R", "S", "Q", "U"].include?(cit_record.capture_status)%>
                        <%= render partial: "domains/croupier_core/cit_records/form_level5", locals: {company: company, cit_record: cit_record} %>
                        
                    <%else%>
                        <h5>Level 1 data is required!</h5>
                    <%end%>
                </div>
            </div>
            </div>

        </div>

</div>
