

<h3>Company Contact Types</h3>

<table class="table table-striped table-bordered table-hover table-sm container-fluid" >
  <thead class="thead-dark" >
    <tr>
      <th>Role</th>
      <th>Definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_contact_types.each do |company_contact_type| %>
      <tr>
        <td><%= company_contact_type.role %></td>
        <td><%= company_contact_type.definition %></td>
        <td><%= link_to 'View', company_contact_type %></td>
        <td><%= link_to 'Edit', edit_company_contact_type_path(company_contact_type) %></td>
        <td><%= link_to 'Delete', company_contact_type, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company Contact Type', new_company_contact_type_path, class: "action-btn" %>
